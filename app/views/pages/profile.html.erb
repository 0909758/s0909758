<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user_full_name %></h3>
      </div>
      <div class="panel-body">
        profile picture
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Messages</h3>
      </div>
      <div class="panel-body">
        <% if current_user %>
        <div class="panel panel-default">
          <div class="panel-body">
            <p><%= render 'posts/form' %></p>
          </div>
        </div>
        <% end %>

        <% @posts.each do |post| %>
            <div class="panel panel-default">
              <div class="panel-body">
                <p><%= post.content %></p>
              </div>
              <div class="panel-footer">
                <p><%= post.user %></p>
                <p><%= post.created_at %></p>
                <p><%= post.profile_id %></p>
                <% if current_user && post.user == current_user %>
                    <p>
                      <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete that message?' } %>
                    </p>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        Friends
      </div>
    </div>
  </div>
</div>